<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <LangVersion>8</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <RootNamespace>Sokol.Samples</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\Sokol.Graphics.DotNetCoreOpenGL\Sokol.Graphics.DotNetCoreOpenGL.csproj" />
      <ProjectReference Include="..\..\Sokol.Graphics\Sokol.Graphics.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Include="..\..\..\ext\SDL2-CS\src\SDL2.cs">
        <Link>SDL2.cs</Link>
      </Compile>
      <Compile Include="..\..\..\ext\SDL2-CS\src\SDL2_image.cs">
        <Link>SDL2_image.cs</Link>
      </Compile>
      <Compile Include="..\..\..\ext\SDL2-CS\src\SDL2_mixer.cs">
        <Link>SDL2_mixer.cs</Link>
      </Compile>
      <Compile Include="..\..\..\ext\SDL2-CS\src\SDL2_ttf.cs">
        <Link>SDL2_ttf.cs</Link>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Include="..\..\..\lib\libSDL2-2.0.10\SDL2.dll">
        <Link>lib\SDL2.dll</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\..\..\lib\libSDL2-2.0.10\libSDL2.dylib">
        <Link>lib\libSDL2.dylib</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="..\..\..\lib\libSDL2-2.0.10\libSDL2.so">
        <Link>lib\libSDL2.so</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
