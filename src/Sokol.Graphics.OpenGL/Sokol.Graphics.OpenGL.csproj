<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>A .NETStandard wrapper for Sokol; minimal cross-platform standalone C headers.</Description>
        <TargetFrameworks>netstandard2.0</TargetFrameworks>
        <RootNamespace>Sokol.Graphics.OpenGL</RootNamespace>
        <LangVersion>8</LangVersion>
        <PackageVersion>0.1.0</PackageVersion>
        <Title>Sokol.Graphics.OpenGL</Title>
        <Authors>Lucas Girouard-Stranks</Authors>
        <RootNamespace>Sokol</RootNamespace>
        <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
        <Copyright>Copyright Â© 2019 Lucas Girouard-Stranks</Copyright>
        <PackageProjectUrl>https://github.com/lithiumtoast/sokol-csharp</PackageProjectUrl>
        <License>MIT</License>
        <RepositoryUrl>https://github.com/lithiumtoast/sokol-csharp</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>sokol sokol_gfx c# csharp pinvoke .netstandard windows linux macos opengl</PackageTags>
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="..\..\lib\libGLEW-2.1.0\GLEW.dll">
            <Link>GLEW.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/win-x64/native</PackagePath>
        </Content>
        <Content Include="..\..\lib\libGLEW-2.1.0\libGLEW.so">
            <Link>libGLEW.so</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/linux-x64/native</PackagePath>
        </Content>
        <Content Include="..\..\lib\libsokol_gfx-2019.10.08\linux\opengl\release\libsokol_gfx.so">
            <Link>libsokol_gfx.so</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/linux-x64/native</PackagePath>
        </Content>
        <Content Include="..\..\lib\libsokol_gfx-2019.10.08\macos\opengl\release\libsokol_gfx.dylib">
            <Link>libsokol_gfx.dylib</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/osx-x64/native</PackagePath>
        </Content>
        <Content Include="..\..\lib\libsokol_gfx-2019.10.08\windows\opengl\release\sokol_gfx.dll">
            <Link>sokol_gfx.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/win-x64/native</PackagePath>
        </Content>
    </ItemGroup>

</Project>
